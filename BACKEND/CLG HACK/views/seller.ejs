<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Seller</title>
  </head>
  <body>
    <h1>HELLO <%= seller.name %></h1>

    <h3>Detail</h3>
    <ul>
      <li>Address: <%= seller.address %></li>
      <li>Phone: <%= seller.phone %></li>
      <li>ShopName: <%= seller.shopname %></li>
    </ul>
<br>
<br>
    <h3>Items Detail</h3>
    <ul>
      <% seller.items.forEach(item => { %>
      <li>Name: <%= item.name %></li>
      <li>Desc:<%= item.description %></li>
      <li>Price: <%= item.price %></li>
      <li>Date Added :<%= item.dateAdded %></li>
      <br />
      <br />
      <% }); %>
    </ul>

    <!-- for additon of more items -->
    <h3>Add More Items</h3>
    <form action="/seller/<%= seller._id %>additem" method="get">
      <button>Add More</button>
    </form>
  </body>
</html>
